<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Complaint Department</title>
    <link rel="stylesheet" href="~/lib/bootstrap-4.1.3-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-5.5.0-web/css/fontawesome.min.css" />
</head>
<body>
    <div class="logo"><img src="~/images/Asset 3web.png" /></div>
    <nav class="navbar  navbar-default navbar-expand-lg">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item navbar-brand">CD</li>
            <li class="nav-item @ViewData["nav-home"]"><a href="/" class="navbar-text">Home</a></li>
            <li class="nav-item @ViewData["nav-add"]"><a href="/Complaint/Add" class="navbar-text">Add</a></li>
            <li class="nav-item @ViewData["nav-list"]"><a href="/Complaint/List" class="navbar-text">List</a></li>
            <li class="nav-item @ViewData["nav-search"]"><a href="/Complaint/Search" class="navbar-text">Search</a></li>
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                @if (this.User.IsInRole("admin"))
                {
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-danger">Admin Users</a>
                    <a asp-controller="RoleAdmin" asp-action="Index" class="btn btn-danger">Admin Roles</a>
                }
                <a asp-controller="Account" asp-action="Logout"
                   class="btn btn-danger">Logout</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login"
                   class="btn btn-danger">Login</a>
            }
        </ul>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Complaint Department</p>
            <p>No privacy allowed! All rights reserverd.</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap-4.1.3-dist/js/bootstrap.js"></script>
    <script src="~/lib/fontawesome-free-5.5.0-web/js/fontawesome.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
