@model List<Complaint>

@{
    ViewData["nav-search"] = "active";
    ViewData["Title"] = "Search Results include " + Model.Count + " complaint(s)";
}

<h2>Search Results</h2>

@if (Model.Count == 0)
{
    <div class="no-results">No complaints found.</div>
}

@if (Model.Count > 0)
{
    @foreach (var complaint in Model)
    {
        <div class="complaint">
            <div class="complaint-date">@complaint.Create.ToLocalTime()</div>
            <div class="complaint-contents">@complaint.Contents</div>
            <div class="complaint-details"><button class="complaint-details-button btn btn-primary" data-id="@complaint.ID">Details</button></div>
        </div>
    }
}